<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="${APPDATA}\JuliusSweetland\OptiKey\Logs\OptiKey.log" />
      <encoding value="utf-8" />
      <appendToFile value="false" />
      <staticLogFileName value="true" />
      <rollingStyle value="Once" />
      <maxSizeRollBackups value="10" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%2thread] %-5level %logger: %message%newline" />
      </layout>
    </appender>
    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <level value="ALL" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level %logger - %message%newline" />
      </layout>
      <!--filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="JuliusSweetland.OptiKey.Observables.TriggerSources" />
      </filter>
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="JuliusSweetland" />
        <acceptOnMatch value="false" />
      </filter-->
    </appender>
    <root>
      <!--level value="ALL" /-->
      <appender-ref ref="RollingFileAppender" />
      <!--appender-ref ref="Console" /-->
    </root>
  </log4net>
</configuration>