<mahapps:MetroWindow x:Class="JuliusSweetland.OptiKey.UI.Windows.ManagementWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mahapps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                     xmlns:views="clr-namespace:JuliusSweetland.OptiKey.UI.Views"
                     xmlns:resx="clr-namespace:JuliusSweetland.OptiKey.Properties"
                     Title="{x:Static resx:Resources.MANAGEMENT_CONSOLE_TITLE}"
                     Topmost="True"
                     WindowStartupLocation="CenterScreen"
                     MinWidth="300" MinHeight="200"
                     Icon="..\..\Resources\Icons\Management.ico">
